{
	"id": "{%=manifest.id%}",
	"name": "{%=manifest.name%}",
	"description": "Echo Comments increases user engagement and time spent on your website by enabling users to easily contribute Comments, Photos, Videos and Links to your content in real-time. Moderators can quickly and easily curate the conversation and ‘pin’ the best contributions to the top of the stream.",
	"app_version": "{%=packageVersions.stable%}",
	"cloudapp_protocol_version": "1.0.0",
	"icon": "{%=baseURLs.prod%}/images/icon.png",
	"developer": {
		"id": "echo",
		"name": "Echo",
		"url": "http://www.aboutecho.com",
		"email": "solutions@aboutecho.com",
		"icon": "http://cdn.echoenabled.com/images/echo.png"
	},
	"dashboards": [{
		"id": "instances",
		"title": "Instances",
		"script": "{%= baseURLs.prod %}/dashboard.js",
		"component": "Echo.Apps.Conversations.Dashboard",
		"type": "instances",
		"config": {
			"instanceManager": {
				"instance": {"useLoadingIcon": true}
			}
		}
	}, {
		"id": "docs",
		"type": "external",
		"title": "Documentation",
		"config": {
			"src": "http://emb.echoplatform.com/conversations/docs/overview"
		}
	}],
	"client_widget": {
		"component": "Echo.Apps.Conversations",
		"scripts": {
			"dev": "{%= baseURLs.dev %}/app.js",
			"prod": "{%= baseURLs.prod %}/app.js"
		}
	}
}
